<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/web_hi_res_512"
		android:layout_centerHorizontal="true" android:id="@+id/logo" />
	<TextView android:text="Translate clipboard text to"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/logo" android:id="@+id/translateLabel" />
	<Spinner android:id="@+id/languageSpinner"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/translateLabel" android:entries="@array/google_translate_locale_list_name"
		android:entryValues="@array/google_translate_locale_list_value">
	</Spinner>
</RelativeLayout>
